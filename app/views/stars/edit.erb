<div class="page-header">
<h3>Edit Star Details</h3>
</div>

<div class="jumbotron">
<form action="/stars/<%= @star.slug %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="PATCH">

  <label> Star Name </label>
      <input type="text" name="star[name]" value="<%= @star.name %>"><br><br>

      <label>Select Star Type:</label>
           <select name="star[star_type]" required>
             <option selected="selected">Please select...</option>
             <option value = "Hypergiant">Hypergiant</option>
             <option value = "Supergiant">Supergiant</option>
             <option value = "Bright Giant">Bright Giant</option>
             <option value = "Giant">Giant</option>
             <option value = "Main Sequence">Main Sequence</option>
             <option value = "Red Dwarf">Red Dwarf</option>
             <option value = "Yellow Dwarf">Yellow Dwarf</option>
             <option value = "White Dwarf">White Dwarf</option>
             <option value = "Brown Dwarf">Brown Dwarf</option>
             <option value = "Pulsar">Pulsar</option>
           </select>

<br><br>

  <label> Distance from Earth (in light years): </label>
    <input type="text" name="star[distance]" value="<%= @star.distance %>"><br><br>

    <br><br>

  <label>Planets:</label>
    <br>
    <ul>
    <% @star.planets.all.each do |planet| %>
      <li><a href="/planets/<%= planet.slug %>"><%= planet.name %></a>
    <% end %>
    </ul>

<br>

<input type="submit" value="Save Changes" class="btn btn-success btn-lg" role="button">

</form>

</div>
<br>
<a href = "/stars">Stars</a>     |     <a href="/planets">Planets</a>     |     <a href="/">Home</a>

<br><br><br><br><br>
<%= "Logged In as" if Helper.is_logged_in?(session) %> <%= @user.username %>     |     <a href = '/logout'><%= "Log Out" if Helper.is_logged_in?(session) %></a>
